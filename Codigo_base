/*

	prueba de escritorio del menu principal para proyecto

*/
#include <iostream>
#include <stdlib.h>
#include <time.h>
#include "funciones.h"

using namespace std;

void inicioPartida(int &maximaPuntuacion, string &nombre);
void estadisticas(int maximaPuntuacion, string nombre);
void creditos();
void tirada_de_dados(string nombre, int &maximaPuntuacion);


int main() {

    int eleccion, maximaPuntuacion = 0;
    char salir = 'N';
    string nombre;

    while(salir == 'N' || salir == 'n'){

        cout << " " << endl;
        cout << "\t+------MENU PRINCIPAL------+" << endl;
        cout << "\t|   1    |    P v P        |" << endl;
        cout << "\t|   2    |    ESTADISTICAS |" << endl;
        cout << "\t|   3    |    CREDITOS     |" << endl;
        cout << "\t+--------------------------+" << endl;
        cout << "\t|   0    |    SALIR        |" << endl;
        cout << "\t+--------------------------+" << endl;
        cin >> eleccion;
        cout << system("pause");
        cout << system("cls");

        if (eleccion != 0){
            while (eleccion < 0 || eleccion > 3){
                cout << "ERROR, SELECCION INVALIDA" << endl;
                cin >> eleccion;
                cout << system("cls");
            }

            switch(eleccion){
                case 1:
                    inicioPartida(maximaPuntuacion, nombre);
                break;

                case 2:
                    estadisticas(maximaPuntuacion, nombre);
                break;

                case 3:
                    creditos();
                break;
            }
        }

        if (eleccion == 0) {

            cout << "DESEA SALIR DE ESTE HERMOSO MENU?" << endl;
            cout << "\tS = SI \n\tN = NO" << endl;
            cin >> salir;

            while(salir != 'S' && salir != 's' && salir != 'N' && salir != 'n'){
                cout << "ERROR, SELECCION INVALIDA" << endl;
                cin >> salir;
            }
            cout << system("pause");
            cout << system("cls");
        }
    }

    return 0;
}
