/** pvp ----------------------------------------------------------------------------------------------------------------- **/


void inicioPartida(int &maxPuntuacion, string &nombre){
    cout << "\tELIGIO P V P" << endl;
    cout << "---------------------------------------------------------------------------------------" << endl;
    cout << endl;
    cout << "ingrese su nombre" << endl;
    cin >> nombre;
    cout << endl;
    cout << nombre << " SACO EL DADO" << endl;

    tirada_de_dados(nombre);

}



/** estadisticas----------------------------------------------------------------------------------------------------------------- **/
void estadisticas(int maxPuntuacion, string nombre) {
    cout << "eligio estadisticas" << endl;
    cout << "\tmejor puntuacion: " << maxPuntuacion << " - " << nombre << endl;

    cout << "---------------------------------------------------------------------------------------" << endl;
}






/** creditos ----------------------------------------------------------------------------------------------------------------- **/
