/** pvp ----------------------------------------------------------------------------------------------------------------- **/
void inicioPartida(int &maxPuntuacion, string &jugador_1, string &jugador_2){

    cout << "\tELIGIO P V P" << endl;
    cout << "---------------------------------------------------------------------------------------" << endl;

    // inicia el jugador 1 tirando los dados
    cout << endl;
    cout << "ingrese su nombre" << endl;
    cin >> jugador_1;
    cout << endl;
    cout << jugador_1 << " SACO EL DADO" << endl;

    tirada_de_dados(jugador_1);


    // continua el jugador 2 tirando los dados en su turno
    cout << endl;
    cout << "ingrese su nombre" << endl;
    cin >> jugador_2;
    cout << endl;
    cout << jugador_2 << " SACO EL DADO" << endl;

    tirada_de_dados(jugador_2);


}



