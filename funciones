/** pvp ----------------------------------------------------------------------------------------------------------------- **/


void inicioPartida(int &maxPuntuacion, string &nombre){
    cout << "\tELIGIO P V P" << endl;
    cout << "---------------------------------------------------------------------------------------" << endl;
    cout << endl;
    cout << "ingrese su nombre" << endl;
    cin >> nombre;
    cout << endl;
    cout << nombre << " SACO EL DADO" << endl;

    tirada_de_dados(nombre);

}



/** estadisticas----------------------------------------------------------------------------------------------------------------- **/
void estadisticas(int maxPuntuacion, string nombre) {
    cout << "eligio estadisticas" << endl;
    cout << "\tmejor puntuacion: " << maxPuntuacion << " - " << nombre << endl;

    cout << "---------------------------------------------------------------------------------------" << endl;
}






/** creditos ----------------------------------------------------------------------------------------------------------------- **/
void creditos() {
    cout << "eligio creditos" << endl;
    cout << "---------------------------------------------------------------------------------------" << endl;
}





/** tirada de dados ----------------------------------------------------------------------------------------------------------------- **/
void tirada_de_dados(string nombre){
    srand(time(NULL));

    int dado = 1 + rand()%(6);

    cout << "EL JUGADOR " << nombre << " TIRO EL DADO" << endl;
    cout << system("pause");
    cout << system("cls");
    cout << "SACO: " << endl;
    cout << endl;

    switch (dado){
    case 1:
        cout << "\t+-----------+" << endl;
        cout << "\t|           |" << endl;
        cout << "\t|           |" << endl;
        cout << "\t|     x     |" << endl;
        cout << "\t|           |" << endl;
        cout << "\t|           |" << endl;
        cout << "\t+-----------+" << endl;
        break;

    case 2:
        cout << "\t+-----------+" << endl;
        cout << "\t|  x        |" << endl;
        cout << "\t|           |" << endl;
        cout << "\t|           |" << endl;
        cout << "\t|           |" << endl;
        cout << "\t|        x  |" << endl;
        cout << "\t+-----------+" << endl;
        break;

    case 3:
        cout << "\t+-----------+" << endl;
        cout << "\t| x         |" << endl;
        cout << "\t|           |" << endl;
        cout << "\t|     x     |" << endl;
        cout << "\t|           |" << endl;
        cout << "\t|          x|" << endl;
        cout << "\t+-----------+" << endl;
        break;

    case 4:
        cout << "\t+-----------+" << endl;
        cout << "\t|  x     x  |" << endl;
        cout << "\t|           |" << endl;
        cout << "\t|           |" << endl;
        cout << "\t|           |" << endl;
        cout << "\t|  x     x  |" << endl;
        cout << "\t+-----------+" << endl;
        break;

    case 5:
        cout << "\t+-----------+" << endl;
        cout << "\t|  x     x  |" << endl;
        cout << "\t|           |" << endl;
        cout << "\t|     x     |" << endl;
        cout << "\t|           |" << endl;
        cout << "\t|  x     x  |" << endl;
        cout << "\t+-----------+" << endl;
        break;

    case 6:
        cout << "\t+-----------+" << endl;
        cout << "\t|  x     x  |" << endl;
        cout << "\t|           |" << endl;
        cout << "\t|  x     x  |" << endl;
        cout << "\t|           |" << endl;
        cout << "\t|  x     x  |" << endl;
        cout << "\t+-----------+" << endl;
        break;

    }


    cout << system("pause");
    cout << system("cls");
}


/** carga de matrices -----------------------------------------------------------------------------------------------------------**/
void preparacion_barajas(string baraja_muestra[][4], bool baraja_disponibles[][4]){
    const int TIPOS = 5;
    const int PALOS = 4;


    baraja_muestra[0][0]= "10 corazones";
    baraja_muestra[0][1]= "10 picas";
    baraja_muestra[0][2]= "10 diamantes";
    baraja_muestra[0][3]= "10 trebol";

    baraja_muestra[1][0]= "J corazones";
    baraja_muestra[1][1]= "J picas";
    baraja_muestra[1][2]= "J diamantes";
    baraja_muestra[1][3]= "J trebol";

    baraja_muestra[2][0]= "Q corazones";
    baraja_muestra[2][1]= "Q picas";
    baraja_muestra[2][2]= "Q diamantes";
    baraja_muestra[2][3]= "Q trebol";

    baraja_muestra[3][0]= "K corazones";
    baraja_muestra[3][1]= "K picas";
    baraja_muestra[3][2]= "K diamantes";
    baraja_muestra[3][3]= "K trebol";

    baraja_muestra[4][0]= "A corazones";
    baraja_muestra[4][1]= "A picas";
    baraja_muestra[4][2]= "A diamantes";
    baraja_muestra[4][3]= "A trebol";




    for (int x = 0; x < TIPOS; x++){
        for (int y = 0; y < PALOS; y++){
            baraja_disponibles[x][y] = true;
        }
    }

}
